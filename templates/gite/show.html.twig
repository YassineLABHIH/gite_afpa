{% extends 'base.html.twig' %}

{% block title %}Gite
{% endblock %}

{% block body %}
	<section class="py-5">
		<div class="container px-4 px-lg-5 my-5">
			<div class="row gx-4 gx-lg-5 align-items-center">
				<div class="col-md-6">

	
					<div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
						<div class="carousel-inner">
							<div class="carousel-item active" data-bs-interval="10000">
								<img src="{{asset("img/caroussel/1.jpg")}}" class="d-block w-100" alt="...">
							</div>
							<div class="carousel-item" data-bs-interval="2000">
								<img src="{{asset("img/caroussel/2.jpg")}}" class="d-block w-100" alt="...">
							</div>
							<div class="carousel-item">
								<img src="{{asset("img/caroussel/3.jpg")}}" class="d-block w-100" alt="...">
							</div>
						</div>
						<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Previous</span>
						</button>
						<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Next</span>
						</button>
					</div>



				</div>
				<div class="col-md-6">
					<h1 class="display-5 fw-bolder">{{ gite.title }}</h1>

					<p class="lead">{{ gite.description }}</p><hr>
					<div class="container">
						<i class="fa-regular fa-square-full"></i>
						<span class="ml-1  fw-bold">
							Surface :
						</span>
						<span class="">{{ gite.surface }}m²
						</span><br>
						<i class="fa-solid fa-house"></i>
						<span class="ml-1  fw-bold">
							Nombre de chambres :
						</span>
						<span class="">{{ gite.nbrRoom }}</span><br>
						<i class="fa-solid fa-paw"></i>
						<span class="ml-1  fw-bold">
							Animaux autorisées :
						</span>
						<span class="">{{ gite.isAnimalAllowed ? 'Oui' : 'Non' }}</span><br>
						{% if gite.isAnimalAllowed == true %}
							<i class="fa-solid fa-tag"></i>
							<span class="ml-1  fw-bold">
								Prix animaux :
							</span>
							<span class="">{{ gite.animalPrice }}€</span><br>
						{% endif %}
					</div>
					<hr>


					<div class="fs-5 mb-5">
						<span class="text-decoration-line-through">$45.00</span>
						<span>$40.00</span>
					</div>
					<div class="d-flex">
						<button class="btn btn-outline-dark flex-shrink-0" type="button">
							Reserver
						</button>
					</div>
				</div>
			</div>
		</div>
	</section>
